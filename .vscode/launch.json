{
    "version": "0.2.0",
    "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Mocha All",
          "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
          "args": [
              "--reporter",
              "spec",
              "--colors",
              "${workspaceFolder}/test"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen"
      }]
  }